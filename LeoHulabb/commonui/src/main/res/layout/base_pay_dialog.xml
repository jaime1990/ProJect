<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="285dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="285dp"
        android:layout_height="390dp">

        <ImageView
            android:paddingTop="14dp"
            android:src="@drawable/bg_right"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_result"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/tv_result"
            android:paddingTop="8dp"
            android:layout_below="@+id/iv_result"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_timecount"
            android:paddingTop="8dp"
            android:textColor="@color/gray"
            android:layout_below="@+id/tv_result"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_pay_result"
            android:paddingTop="8dp"
            android:layout_marginBottom="23dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_pay_result"
            android:src="@drawable/icon_fail"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_cancel"
        android:background="@drawable/selector_btn_closed"
        android:layout_alignParentRight="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

</RelativeLayout>