<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33D1FF"
    android:gravity="center"
    android:orientation="vertical">

    <com.commonui.ShareDemo.ShareItemView
        android:id="@+id/item_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:share_img="@drawable/icon_twitter"
        app:share_text="Twitter"/>

    <com.commonui.ShareDemo.ShareItemView
        android:id="@+id/item_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:share_img="@drawable/icon_fb"
        app:share_text="FaceBook"/>

    <com.commonui.ShareDemo.ShareItemView
        android:id="@+id/item_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:share_img="@drawable/icon_google_plus"
        app:share_text="Google"/>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/gear" />

</LinearLayout>
