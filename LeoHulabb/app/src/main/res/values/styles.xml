<resources>

    <!-- Base application theme. -->
    <style name="Theme.Leo.NoTitle" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
    </style>

    <!--纯图片状态栏不遮挡-->
    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <!--4.4以上设置状态栏颜色-->
    <style name="ColorTranslucentTheme" parent="AppTheme"/>

    <!--4.4以上设置状态栏颜色-->
    <style name="TranslucentTheme" parent="AppTheme"/>

    <declare-styleable name="ProgressWheel">
        <attr format="boolean" name="matProg_progressIndeterminate"/>
        <attr format="color" name="matProg_barColor"/>
        <attr format="color" name="matProg_rimColor"/>
        <attr format="dimension" name="matProg_rimWidth"/>
        <attr format="float" name="matProg_spinSpeed"/>
        <attr format="integer" name="matProg_barSpinCycleTime"/>
        <attr format="dimension" name="matProg_circleRadius"/>
        <attr format="boolean" name="matProg_fillRadius"/>
        <attr format="dimension" name="matProg_barWidth"/>
        <attr format="boolean" name="matProg_linearProgress"/>
    </declare-styleable>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
