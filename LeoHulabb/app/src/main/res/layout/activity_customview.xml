<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:smile="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.commonui.view.RevealLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.commonui.view.SmileyLoadingView
            android:id="@+id/smile"
            android:layout_gravity="center_horizontal"
            smile:strokeWidth="4dp"
            smile:strokeColor="#b3d8f3"
            smile:duration="2000"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <com.commonui.view.MyPieView
            android:id="@+id/v_pie"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.commonui.view.MyRadarView
            android:id="@+id/v_rad"
            android:background="#80eeeeee"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="150dp"/>

        <com.commonui.view.LRadarView
            android:id="@+id/lrv_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <com.commonui.view.LPieView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <com.commonui.view.MySlantedTextView
            android:id="@+id/couponView"
            android:layout_margin="30dp"
            android:background="@color/base_color"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:couponTextStr="用kjadoijasd"
            app:couponTextSize="10sp"
            app:couponRadius="4dp"/>

        <com.commonui.view.MySlantedTextView
            android:layout_margin="30dp"
            android:background="@color/base_color"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:couponTextStr="不用"
            app:couponTextSize="10sp"
            app:couponPic="@drawable/icon_close_red"
            app:couponRadius="4dp"
            app:couponMode="tag"
            app:couponPicMarginTop="12dp"
            app:couponPicMarginRight="15dp"/>

        <com.commonui.view.MySlantedTextView
            android:layout_margin="30dp"
            android:background="@color/base_color"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:couponTextStr="就是想看一下你能展示多长"
            app:couponTextSize="10sp"
            app:couponMode="select"
            app:couponPic="@drawable/icon_close_red"
            app:couponRadius="4dp"/>

    </com.commonui.view.RevealLayout>

</ScrollView>
