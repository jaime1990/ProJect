<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@android:color/white"
              android:orientation="vertical">

    <com.commonui.guideview.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:banner_pageChangeDuration="600"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@color/alpha_black"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="alpha"
        app:banner_indicatorGravity="right"
        app:banner_tipTextSize="15dp"
        app:banner_tipTextColor="@color/white"/>

    <Button
        android:id="@+id/button"
        android:background="@color/base_color"
        android:text="Anim"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <com.commonui.button.BaseButton
        android:id="@+id/button1"
        android:background="@color/base_color"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <com.commonui.button.BaseButton
        android:id="@+id/button2"
        android:background="@color/base_color"
        android:text="NetWork"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
</LinearLayout>
